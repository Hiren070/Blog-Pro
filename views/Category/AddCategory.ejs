<%- include('../Layouts/Header') %>

  <!--begin::App Main-->
  <main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
      <!--begin::Container-->
      <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
          <div class="col-sm-6">
            <h3 class="mb-0">Add Category</h3>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-end">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Add Category</li>
            </ol>
          </div>
        </div>
        <!--end::Row-->
      </div>
      <!--end::Container-->
    </div>
    <!--end::App Content Header-->
    <!--begin::App Content-->
    <div class="app-content">
      <!--begin::Container-->
      <div class="container-fluid">
        <!--begin::Row-->
        <div class="row g-4">

          <!--begin::Col-->
          <div class="col-md-6 ">
            <!--begin::Horizontal Form-->
            <%if(locals.flash.success.length > 0){%>
              <div class="alert alert-success">
                <%= locals.flash.success %>
              </div>
            <%}%>
            <div class="card  card-outline mb-4 ">
              <!--begin::Header-->
              <div class="card-header">
                <div class="card-title">Form</div>
              </div>
              <!--end::Header-->
              <!--begin::Form-->
              <div class="">
                <form method="post" action="/dashboard/insertCategory">
                  <!--begin::Body-->
                  <div class="card-body">
                    <div class="row mb-3">
                      <label for="inputEmail3" class="col-sm-3 col-form-label">Category Name</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputEmail3" name="categoryName" />
                      </div>
                    </div>
                  </div>
                  <!--end::Body-->
                  <!--begin::Footer-->
                  <div class="card-footer">
                    <button type="submit" class="btn bg-dark text-white">Add Category</button>
                  </div>
                  <!--end::Footer-->
                </form>
              </div>
              <!--end::Form-->
            </div>
            <!--end::Horizontal Form-->
          </div>
        </div>
        <!--end::Row-->
      </div>
      <!--end::Container-->
    </div>
    <!--end::App Content-->
  </main>
  <!--end::App Main-->

  <%- include('../Layouts/Footer') %>